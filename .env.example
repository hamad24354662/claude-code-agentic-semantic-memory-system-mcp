# Database Configuration (Required)
# PostgreSQL connection string with pgvector extension
# For Neon: postgresql://[user]:[password]@[host]/[database]?sslmode=require
DATABASE_URL=postgresql://user:password@host.neon.tech/database?sslmode=require

# Embedding Configuration (Optional)
# Model type: 'simple' (default, no dependencies) or 'llama' (requires node-llama-cpp)
EMBEDDING_MODEL=simple

# Embedding dimensions (must match your database vector column size)
# Default: 1536 (compatible with OpenAI embeddings)
EMBEDDING_DIMENSIONS=1536

# Llama Model Configuration (Only if EMBEDDING_MODEL=llama)
# Path to the GGUF model file for embeddings
LLAMA_MODEL_PATH=./models/bge-small-en-v1.5.q8_0.gguf

# Memory Configuration (Optional)
# Default project namespace for memories
DEFAULT_PROJECT=default

# Maximum memories to return in list operations
MAX_MEMORY_LIMIT=100

# Default similarity threshold for semantic search (0.0 to 1.0)
DEFAULT_SIMILARITY_THRESHOLD=0.7

# Server Configuration (Optional)
# MCP server name (shown in Claude Code)
MCP_SERVER_NAME=agentic-memory-server

# MCP server version
MCP_SERVER_VERSION=2.0.0

# Logging level: 'debug', 'info', 'warn', 'error'
LOG_LEVEL=info

# Performance Configuration (Optional)
# Connection pool size for database
DB_POOL_SIZE=10

# Cache TTL for embeddings in seconds (0 to disable)
EMBEDDING_CACHE_TTL=3600

# Maximum concurrent embedding generations
MAX_CONCURRENT_EMBEDDINGS=5

# Development Configuration (Optional)
# Enable debug mode for verbose logging
DEBUG=false

# Enable database query logging
DB_DEBUG=false

# Security Configuration (Optional)
# Metadata fields to exclude from storage (comma-separated)
EXCLUDED_METADATA_FIELDS=password,apiKey,secret,token

# Maximum content length for memories (characters)
MAX_CONTENT_LENGTH=10000

# Backup Configuration (Optional)
# Enable automatic memory backups
ENABLE_BACKUPS=false

# Backup directory path
BACKUP_PATH=./backups

# Backup retention days
BACKUP_RETENTION_DAYS=30